---
import Image from 'astro/components/Image.astro';

---

<section class="hero">
  <div class="container hero__container">
    <div class="content">
      <h1 class="hero__headline">
        Capture with precision.
        <span class="gradient-text">Share with impact.</span>
      </h1>



      <p class="subtitle">
        Simple, fast, and powerful screen recording for everyone. Zoom, pan, and share in crystal clear quality,  zero hassle.
      </p>
      <div class="cta-buttons">
		  <Image src='/chrome-web-store.svg'
				 width="50" height="50"
		  	alt="Chrome Web Store"
            class="chrome_icon"/>
        <a href="#download" class="primary-button">
          Download Extension
        </a>
   
      </div>
    </div>
  </div>
</section>

<style>
  @import url('../style/index.css');

  @media  screen and (max-width: 650px) {
      .hero .hero__headline {
        font-size: 1.9rem;
      }

    .chrome_icon {
      display: none;
    }

    .hero .hero__container {
      height:  calc(100vh - 20vh) !important;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  .hero .hero__container {

  }

  .hero .hero__container {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .content {
    max-width: 800px;
    text-align: center;
    margin: 0 auto;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    color: white;
    margin-bottom: 1.5rem;
  }

  .gradient-text {
    background: linear-gradient(45deg, #FF6B6B, #4ECDC4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 1.15rem;
    color: #94a3b8;
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .primary-button {
    background: linear-gradient(45deg, #FF6B6B, #FF8E53);
    color: white;
    padding: 1rem 2rem;
    border-radius: 9999px;
    font-weight: 600;
    transition: transform 0.2s;
    text-decoration: none;
  }

  .secondary-button {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    padding: 1rem 2rem;
    border-radius: 9999px;
    font-weight: 600;
    transition: transform 0.2s;
    text-decoration: none;
  }

  .primary-button:hover,
  .secondary-button:hover {
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .cta-buttons {
      flex-direction: column;
    }
  }
</style>

